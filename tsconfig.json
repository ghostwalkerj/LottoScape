{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
    ]
  },
  "include": [
    "src",
    "**/*.ts",
    "./test/*.ts",
    "src/typechain/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "cache",
    "artifacts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}